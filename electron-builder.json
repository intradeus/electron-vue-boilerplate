{
    "productName":"Electron Vue Boilerplate",
    "appId":"com.electron.electron-vue-boilerplate",
    "artifactName":"${productName}-${os}-${version}.${ext}",
    "asar":true,
    "compression":"maximum",
    "npmRebuild":true,
    "forceCodeSigning": false,
    "mac":{
        "category":"public.app-category.utilities",
        "target":["dmg"],
        "icon":"build/electron-app/assets/icon.png"
    },
    "dmg":{
        "icon":"build/electron-app/assets/icon.png",
        "iconSize":96,
        "contents":[
            {
                "x":130,
                "y":220,
                "type":"file"
            },
            {
                "x":410,
                "y":220,
                "type":"link",
                "path":"/Applications"
            }
        ]
    },
    "win":{
        "icon":"build/electron-app/assets/icon.png",
        "target":[
            "nsis",
            "msi"
        ]
    },
    "nsis":{
        "oneClick":false,
        "allowToChangeInstallationDirectory":true,
        "createDesktopShortcut":true
    },
    "linux":{
        "icon":"build/electron-app/assets/icon.png",
        "target":[
            "deb",
            "rpm",
            "snap",
            "AppImage"
        ],
        "category":"Utility"
    },
    "directories":{
        "buildResources":"build",
        "output":"release"
    },
    "files": [
        "build/**/*",
        "!node_modules${/*}"
    ] ,
    "publish":{
        "provider":"github",
        "repo":"electron-vue-boilerplate",
        "host":"github.com",
        "owner":"intradeus",
        "vPrefixedTagName":true,
        "releaseType":"draft"
    }
}
